# ==================================
# CONFIGURACIÓN DE SEGURIDAD JWT
# ==================================

# Clave secreta para firmar tokens JWT (CAMBIAR EN PRODUCCIÓN)
# Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Tiempo de expiración del token principal (formato: 1h, 24h, 7d)
JWT_EXPIRES_IN=24h

# Tiempo de expiración del refresh token
JWT_REFRESH_EXPIRES_IN=7d

# ==================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==================================

# Host del servidor MySQL
DB_HOST=localhost

# Puerto de MySQL (por defecto 3306)
DB_PORT=3306

# Nombre de la base de datos
DB_NAME=sgd_db

# Usuario de la base de datos
DB_USER=root

# Contraseña de la base de datos
DB_PASSWORD=

# ==================================
# CONFIGURACIÓN DE SEGURIDAD
# ==================================

# Número máximo de intentos de login fallidos antes de bloquear
MAX_LOGIN_ATTEMPTS=5

# Ventana de tiempo para contar intentos de login (en minutos)
LOGIN_ATTEMPT_WINDOW=15

# Número máximo de sesiones activas por usuario
MAX_SESSIONS_PER_USER=3

# ==================================
# CONFIGURACIÓN DE SERVIDOR
# ==================================

# Puerto del servidor API
PORT=3000

# Origen permitido para CORS (frontend)
CORS_ORIGIN=http://localhost:4200

# ==================================
# CONFIGURACIÓN DE ARCHIVOS
# ==================================

# Tamaño máximo de archivo en bytes (10MB)
MAX_FILE_SIZE=10485760

# Tipos de archivo permitidos (separados por coma)
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png

# ==================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ==================================

# Configuración SMTP para envío de emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@sgd.com

# ==================================
# CONFIGURACIÓN DE AMBIENTE
# ==================================

# Ambiente de ejecución (development, production)
NODE_ENV=development
